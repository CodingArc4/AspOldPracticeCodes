@model TemplatedHtmlHelpers.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @Html.DisplayName("Name")
        <br />
        <br />
        @Html.DisplayNameFor(x => x.DateOfBirth)
        <br />
        <br />
        @Html.DisplayText("Name")
