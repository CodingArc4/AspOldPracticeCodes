@model PassDataFromViewToController.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <section>
            <h4>Pass Data using Parameters</h4>
            @using (Html.BeginForm("PostUsingParameters", "Home"))
            {
                <input type="text" name="firstName" /><br />
                <input type="text" name="lastName" /><br />
                <br />
                <input type="submit" value="Submit here" />
            }
        </section>

        <section>
            <h4>Pass Data using Request</h4>
            @using (Html.BeginForm("PostUsingRequest", "Home"))
            {
                <input type="text" name="firstName" /><br />
                <input type="text" name="lastName" /><br />
                <br />
                <input type="submit" value="Submit here" />
            }
        </section>

        <section>
            <h4>Pass Data using Form Collection</h4>
            @using (Html.BeginForm("PostUsingFormCollection", "Home"))
            {
                <input type="text" name="firstName" /><br />
                <input type="text" name="lastName" /><br />
                <br />
                <input type="submit" value="Submit here" />
            }
        </section>


        <section>
            <h4>Pass Data using Form Strongly Binding</h4>
            @using (Html.BeginForm("PostUsingBinding", "Home"))
            {
                @Html.TextBoxFor(x => x.firstName)<br />
                @Html.TextBoxFor(x => x.lastName)<br/>
                <br />
                <input type="submit" value="Submit here" />
            }
        </section>

    </div>
</body>
</html>